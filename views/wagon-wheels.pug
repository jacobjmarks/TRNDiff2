extends layout

block scripts
    script.
        regulonNetworks = !{network}.regulons;
    script(src="/js/wagon-wheels.js")
    link(rel="stylesheet" href="/css/wagon-wheels.css")

block content
    .ui.three.steps
        a.step.completed(href="/regprecise/genomes")
            .content
                .title Genome
                .description Select a Genome
        a.step.completed(href=`/regprecise/regulons?genomeId=${JSON.parse(network).regulons.find(r => r.regulonId == JSON.parse(network)["selected-regulon"]).genomeId}`)
            .content
                .title Regulon
                .description Select a Regulon
        a.step.active
            .content
                .title Regulog Graph
                .description Network of selected Regulon

    #graph
        #header
            .ui.large.basic.right.floated.icon.buttons
                .ui.button#btn-zoom-out
                    i.zoom-out.icon
                .ui.button#btn-zoom-in
                    i.zoom-in.icon
        #body.ui.cards(style="clear:both")